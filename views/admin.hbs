<script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
<script src="https://unpkg.com/primevue/umd/primevue.min.js"></script>
<script src="https://unpkg.com/@primevue/themes/umd/aura.min.js"></script>
<script>
  const { createApp, ref } = Vue
  const searchParams = new URLSearchParams(window.location.search)
  const id = searchParams.get('id')
  const app = createApp({
    setup() {
      const participant = ref({})
      return {
        participant
      }
    },
    async mounted() {
      if (id) {
        const response = await fetch(`participants/${id}`)
        this.participant = await response.json()
      }
    },
  })
  app.mount('#app')

  const tabela = createApp({
    setup() {
      const participants = ref({})
      return {
        participants
      }
    },
    async mounted() {
      const response = await fetch(`participants`)
      this.participants = await response.json()
    },
  })
  tabela.use(PrimeVue.Config, {
    theme: {
      preset: PrimeVue.Themes.Aura,
      options: {
        darkModeSelector: 'false',
      }
    }
  });
  tabela.component('p-datatable', PrimeVue.DataTable);
  tabela.component('p-column', PrimeVue.Column);
  tabela.component('p-columngroup', PrimeVue.ColumnGroup);
  tabela.component('p-row', PrimeVue.Row);
  tabela.mount('#tabela')
</script>
</body>
</html>
