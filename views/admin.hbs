<section class="page-section about-heading">
  <div class="container">
    <div class="about-heading-content">
      <div class="row">
        <div class="col-xl-9 col-lg-10 mx-auto">
          <div class="bg-faded rounded p-5">
            <h2 class="section-heading mb-4">
              <span class="section-heading-lower">Cadastre Convidados</span>
            </h2>
            <form id="app" >
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="name" v-model="participant.name" placeholder="Seu Nome">
                <label for="name">Seu Nome</label>
                <small class="form-text text-danger">Nome Obrigat√≥rio</small>
              </div>
              <div class="form-floating mb-3">
                <input type="number" class="form-control" id="phone" v-model="participant.phone" placeholder="Seu Telefone">
                <label for="phone">Seu Telefone</label>
                <small class="form-text text-danger">Telefone Obrigat√≥rio (apenas n√∫meros)</small>
              </div>
              <div v-for="guest in participant.guests" >
                <div class="input-group mb-3 guests">
                  <div class="form-floating mb-3 col-8">
                    <input type="text" readonly class="form-control" v-model="guest.name" id="guestName" placeholder="Acompanhante">
                    <label for="guestName">Acompanhante</label>
                    <small class="form-text text-danger">Nome Acompanhante Obrigat√≥rio</small>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input checkbox-xl" disabled v-model="guest.isKid" type="checkbox" id="flexCheckDefault">
                    <label class="form-check-label" style="padding-left: 8px" for="flexCheckDefault">
                      Menor de 15 anos?
                    </label>
                  </div>
                  <div class="form-floating mb-3">
                    <button type="button" class="btn btn-outline-primary">
                      <em class="fa-solid fa-trash-can"></em>
                    </button>
                  </div>
                </div>
              </div>
              <button class="btn btn-success col-12" type="submit">
                \{{participant.name}}
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div id="tabela" class="bg-faded rounded p-1 mt-5">
      <p-datatable :value="participants" stripedRows>
        <p-column field="name" sortable header="Nome"></p-column>
        <p-column field="phone" header="Telefone"></p-column>
        <!--      <p-column field="guests" header="Acompanhantes"></p-column>-->
      </p-datatable>
    </div>
  </div>
</section>
